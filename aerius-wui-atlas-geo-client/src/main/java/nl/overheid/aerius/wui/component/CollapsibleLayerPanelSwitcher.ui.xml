<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:e="urn:import:nl.overheid.aerius.wui.main.ui.editor"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.overheid.aerius.wui.widget"
  xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.AtlasMessages' />
  <ui:with field='img' type='nl.overheid.aerius.wui.resources.ImageResources' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R' />
  <ui:style>
    .layerPanel {
    box-shadow: 0px -2px 2px #bbb;
    background: white;
    overflow: hidden;
    position: absolute;
    bottom: 0px;
    width: 100%;
    padding-right: 50px;
    }
    .panelClicker {
    cursor: pointer;
    }
    .panelClicker:hover {
    background-color: rgba(50, 50, 50, 0.1);
    }
    .flip {
    padding: 10px;
    }
    .label {
    padding: 10px;
    }
  </ui:style>
  <g:FlowPanel styleName="{style.layerPanel}">
    <g:FlowPanel styleName="{res.css.flex} {res.css.alignCenter} {style.panelClicker}">
      <w:FlipButton ui:field="flipButton" addStyleNames="{style.flip}" />
      <g:Label styleName="{style.label} {res.css.grow}" text="{i18n.contextLayerPanelTitle}" ui:field="label" />
    </g:FlowPanel>
    <w:SwitchPanel ui:field="switchPanel" visible="false" />
  </g:FlowPanel>
</ui:UiBinder>

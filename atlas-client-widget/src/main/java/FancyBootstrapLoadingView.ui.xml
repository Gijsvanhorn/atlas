<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .bootstrap {
    flex-grow: 1;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr auto;
    align-items: center;
    justify-content: center;
    background: #e1eaf9;

    min-height: 100vh;
    }

    .container {
    flex-grow: 1;
    height: 100%;

    display: grid;
    grid-template-columns: 1fr;

    align-items: center;
    justify-items: center;
    
    margin-bottom: 20px;
    }

    .title {
    display:
    flex;
    position: relative;
    align-items: center;
    }
    
    .titleHeader {
    font-size: 3em;
    display: flex;
    }

    .copyright {
    font-size: 0.2em;
    margin-right: 20px;
    }

    .graph {
    width:
    80%;
    }

    .apps {
    display: flex;
    flex-direction: column;
    align-items: center;
    }

    .splash-container {
    display: flex;
    white-space: nowrap;
    position: relative;
    }

    .loadingContainer {
    height: 115px;
    margin-left: 115px;
    position: absolute;
    display: flex;
    align-items: center;
    color: #164273;
    font-size: 1.3em;
    }

    .loader
    {
    padding: 10px;
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    }

    .splash-btn {
    margin: 10px;
    width: 96px;

    transition: border 0.15s ease-out;
    box-sizing:
    border-box;
    border: 1px solid transparent;
    border-radius: 7px;
    }

    .splash-btn:hover {
    border: 1px solid black;
    }

    .active {
    cursor: pointer;
    }

    @media(min-width: 800px) {
      .container {
      display: grid;
      grid-template-columns: minmax(300px, 1fr) minmax(200px, 500px) minmax(300px, 1fr);
      }
    
      .container.active {
      grid-template-columns: minmax(200px, 500px) minmax(300px, 1fr) minmax(200px, 500px);
      }
    }

    .footer {
    width: 100%;
    display: flex;
    max-height: 400px;
    padding-bottom: 20px;
    background: white;

    flex-shrink: 0;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    }

    .rivm {
    margin-left: 175px;
    }

    .trademark {
    position: absolute;
    top: -50px;
    font-size: 0.7em;
    white-space: nowrap;
    }

    .subtitle {
    color: #888;
    font-size: 0.9em;
    }

    .provinces {
    width: 100%;

    /* Flex fallback */
    display: flex;
    flex-wrap: wrap;

    /* Supports Grid */
    display: grid;
    grid-template-columns: repeat(auto-fit, 122px);
    grid-auto-rows: 48px;
    align-items: center;
    justify-content: space-around;
    }
    .provinces > img {
      max-height: 48px;
    }
  </ui:style>
  <g:HTMLPanel styleName="{style.bootstrap}">
    <div class="{style.container}">
      <div class="{style.title}">
        <h1 class="{style.titleHeader}">
          AERIUS
          <span class="{style.copyright}">&copy;</span>
          apps
        </h1>
      </div>
      <img class="{style.graph}" src="res/splash/aerius-splash-illustration.svg"></img>
      <div class="{style.apps}">
        <div class="{style.splash-container}">
          <img class="{style.splash-btn}" src="res/splash/splash-calculator.svg"></img>
        </div>
        <div class="{style.splash-container}">
          <img class="{style.splash-btn}" src="res/splash/splash-register-inactief.svg"></img>
        </div>
        <div class="{style.splash-container}">
          <img class="{style.splash-btn} {style.active}" ui:field="monitorButton" src="res/splash/splash-monitor.svg"></img>
          <div ui:field="monitorContainer" class="{style.loadingContainer}" style="display:none;">
            <img class="{style.loader}" src="res/loading.gif"></img>
          </div>
        </div>
        <div class="{style.splash-container}">
          <img class="{style.splash-btn}" src="res/splash/splash-scenario.svg"></img>
        </div>
        <div class="{style.splash-container}">
          <img class="{style.splash-btn}" src="res/splash/splash-connect.svg"></img>
        </div>
      </div>
    </div>
    <div class="{style.footer}">
      <p class="{style.trademark}">AERIUS is een geregistreerd merk van het Ministerie van Economische Zaken</p>
      <img class="{style.rivm}" src="res/splash/rivm-logo-nederlands.svg"></img>
      <p class="{style.subtitle}">AERIUS is ontwikkeld in opdracht van de Rijksoverheid en de gezamelijke provincies</p>
      <div class="{style.provinces}">
        <img src="res/splash/province/Drenthe.svg"></img>
        <img src="res/splash/province/Flevoland.svg"></img>
        <img src="res/splash/province/Friesland.svg"></img>
        <img src="res/splash/province/Gelderland.svg"></img>
        <img src="res/splash/province/Groningen.svg"></img>
        <img src="res/splash/province/Limburg.svg"></img>
        <img src="res/splash/province/Noord-Brabant.svg"></img>
        <img src="res/splash/province/Noord-Holland.svg"></img>
        <img src="res/splash/province/Overijssel.svg"></img>
        <img src="res/splash/province/Utrecht.svg"></img>
        <img src="res/splash/province/Zeeland.svg"></img>
        <img src="res/splash/province/Zuid-Holland.svg"></img>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>


<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:e="urn:import:nl.overheid.aerius.wui.main.ui.editor"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.overheid.aerius.wui.widget"
  xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.AtlasMessages' />
  <ui:with field='img' type='nl.overheid.aerius.wui.resources.ImageResources' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R' />
  <ui:style>
    .title {
    padding: 20px;
    font-weight: bold;
    }
    .toggleButton {
    padding-right: 50px;
    }
    .legendPanel {
    z-index: 1;
    }
    .legendContainer {
    background: #fff;
    box-shadow: 0 2px 2px #bbb;
    }
  </ui:style>
  <g:FlowPanel styleName="{res.css.flex} {res.css.columns} {style.legendPanel} {res.css.noShrink}">
    <g:FlowPanel styleName="{res.css.flex} {res.css.grow} {style.toggleButton}">
      <g:Label ui:field="legendTitleField" styleName="{style.title} {res.css.grow}" />
      <c:LegendToggleButton ui:field="toggleButton" />
    </g:FlowPanel>
    <w:AnimatedFlowPanel ui:field="targetPanel" visible="false" styleName="{style.legendContainer}" />
  </g:FlowPanel>
</ui:UiBinder>


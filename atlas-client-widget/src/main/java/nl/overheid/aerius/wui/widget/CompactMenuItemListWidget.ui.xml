<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:nl.overheid.aerius.wui.widget" xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.AtlasMessages' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style type="nl.overheid.aerius.wui.widget.MenuItemListWidget.CustomStyle">
    .panel {
    position: relative;
    user-select: none;
    }
    .panel:hover .arrow {
    border-color: #721516;
    }
    .panel:hover .image > svg {
    fill: #721516;
    }
    .panel:hover .label {
    color: #721516;
    }
    .focus .arrow, .panel:active .arrow {
    border-color: #d63327 !important;
    }
    .focus .image, .panel:active .image > svg {
    fill: #d63327 !important;
    }
    .focus .label, .panel:active .label {
    color: #d63327 !important;
    }
    .arrow {
    border: solid #4d4d4d;
    border-width: 0 2px 2px 0;
    transform: rotate(45deg);
    padding: 2px;
    margin: 0px 6px 2px;
    transition: border-color 0.15s ease-out;
    }
    .textPanel {
    padding: 10px 0px 0px;
    }
    .label {
    text-align: center;
    color: #4d4d4d;
    font-size: 0.8em;
    transition: color 0.15s ease-out;
    }
    .image {
    width: 32px;
    height: 32px;
    margin: 5px 9px 0px;
    transition: background 0.15s ease-out;
    pointer-events: none;
    }
    .image > svg {
    fill: #4d4d4d;
    }
  </ui:style>
  <g:FocusPanel ui:field="panel" styleName="{style.panel} {res.css.flex} {res.css.clickableBackground} {res.css.alignCenter}">
    <g:FlowPanel styleName="{res.css.grow} {res.css.flex} {res.css.columns} {res.css.alignCenter}">
      <g:SimplePanel ui:field="imagePanel" styleName="{res.css.noShrink} {style.image}" />
      <g:FlowPanel styleName="{res.css.flex} {res.css.alignCenter} {style.textPanel}">
        <g:Label ui:field="label" addStyleNames="{style.label} {res.css.grow}" />
        <g:SimplePanel styleName="{style.arrow}" />
      </g:FlowPanel>
    </g:FlowPanel>
  </g:FocusPanel>
</ui:UiBinder>
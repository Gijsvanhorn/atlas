<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.overheid.aerius.wui.widget"
  xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.AtlasMessages' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style type="nl.overheid.aerius.wui.widget.MaskedButton.CustomStyle" gss="true">
    .control {
    padding: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    }
    .disabled {
    cursor: default !important;
    background: none !important;
    -user-select: none;
    }
    .disabled .button > svg {
    fill: #cccccc !important;
    }
    .disabled .label {
    color: #cccccc !important;
    }
    .button {
    width: 32px;
    height: 32px;
    margin: 0px 9px;
    transition: background 0.15s ease-out;
    pointer-events: none;
    }
    .button > svg {
    fill: #4d4d4d;
    }
    .label {
    transition: color 0.15s ease-out;
    text-align: center;
    font-size: 13px;
    color: #4d4d4d;
    user-select: none;
    }
    .control:hover .button > svg {
    fill: #721516;
    }
    .control:hover .label {
    color: #721516;
    }
    .control:active .button > svg {
    fill: #d63327;
    }
    .control:active .label {
    color: #d63327;
    }
    .selected .button > svg {
    fill: #d63327 !important;
    }
    .selected .label {
    color: #d63327 !important;
    }
  </ui:style>
  <g:FlowPanel ui:field="control" styleName="{style.control} {res.css.flex} {res.css.alignCenter} {res.css.columns} {res.css.clickableBackground}">
    <g:SimplePanel ui:field="button" styleName="{style.button} {res.css.noShrink}" />
    <g:Label ui:field="label" styleName="{style.label}" />
  </g:FlowPanel>
</ui:UiBinder>

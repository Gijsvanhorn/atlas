<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:e="urn:import:nl.overheid.aerius.wui.main.ui.editor" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:nl.overheid.aerius.wui.widget">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.AtlasMessages' />
  <ui:with field='img' type='nl.overheid.aerius.wui.resources.ImageResources' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style type="nl.overheid.aerius.wui.component.SelectorWidget.CustomStyle">
    .container {
    background-color: #f5f5f5;
    padding: 10px;
    margin: 0px 4px;
    }
    .label {
    line-height: 24px;
    color: #d63327;
    font-weight: bold;
    user-select: none;
    }
    .button {
    cursor: pointer;
    padding: 10px;
    transition: background 0.15s ease-out;
    }
    .button:hover {
    background: rgba(0,0,0,0.1);
    }
    .arrow {
    width: 0px;
    height: 0px;
    transition: all 0.1s ease-out;
    }
    .right {
    border-top: 4px solid transparent;
    border-bottom: 4px solid transparent;
    border-left: 8px solid #4d4d4d;
    }
    .left {
    border-top: 4px solid transparent;
    border-bottom: 4px solid transparent;
    border-right: 8px solid #4d4d4d;
    }
    .button:hover > .arrow {
    border-left-color: #a21516;
    border-right-color: #a21516;
    }
    .button:active > .arrow {
    border-left-color: #d63327;
    border-right-color: #d63327;
    }
    .switcher {
    min-height: 24px;
    }
    .error {
    width: 24px;
    height: 24px;
    }
    .loader {
    width: 24px;
    height: 24px;
    }
    .disabled {
    pointer-events: none;
    }
    .disabled .left, .disabled .right {
    opacity: 0.2
    }
    .listBox {
    position: relative;
    flex-grow: 1;
    }
    .num {
    position: absolute;
    right: 7px;
    top: 3px;
    font-size: 0.6em;
    }
  </ui:style>
  <g:SimplePanel ui:field="titleContainer">
    <g:FlowPanel ui:field="container" styleName="{res.css.flex} {res.css.stretch} {res.css.elementMargin}">
      <g:FocusPanel ui:field="leftButton" styleName="{res.css.flex} {res.css.alignCenter} {style.button} {res.css.noShrink}">
        <g:SimplePanel styleName="{style.arrow} {style.left}" />
      </g:FocusPanel>
      <g:FlowPanel styleName="{style.listBox}">
        <g:FocusPanel ui:field="textContainer" styleName="{res.css.flex} {res.css.grow} {style.container} {res.css.clickableBackground}">
          <w:SwitchPanel ui:field="contentSwitchPanel" styleName="{res.css.flex} {res.css.grow} {res.css.justify} {style.switcher}">
            <g:Label ui:field="selectorText" styleName="{res.css.grow} {style.label}" />
            <w:ContentLoadingWidget styleName="{res.css.alignCenter} {style.loader}" />
            <g:Label text="{i18n.noSelectorTextDefault}" styleName="{style.label}" />
            <g:Image url="{res.error.getSafeUri.asString}" styleName="{style.error}" />
          </w:SwitchPanel>
        </g:FocusPanel>
        <g:Label ui:field="numText" visible="false" styleName="{style.num}" />
      </g:FlowPanel>
      <g:FocusPanel ui:field="rightButton" styleName="{res.css.flex} {res.css.alignCenter} {style.button} {res.css.noShrink}">
        <g:SimplePanel styleName="{style.arrow} {style.right}" />
      </g:FocusPanel>
    </g:FlowPanel>
  </g:SimplePanel>
</ui:UiBinder>

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:nl.overheid.aerius.wui.widget" xmlns:c="urn:import:nl.overheid.aerius.wui.component"
  xmlns:d="urn:import:nl.overheid.aerius.wui.atlas.ui.debug" xmlns:l="urn:import:nl.overheid.aerius.wui.atlas.ui.login">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.AtlasMessages' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style>
    .rootView {
    background-color: white;
    width: 100%;
    }
    .warning {
    margin: 10px;
    padding: 20px;
    background: #f6f5a1;
    }
    .content {
    position: relative;
    }
  </ui:style>
  <g:FlowPanel styleName="{res.css.flex} {res.css.grow} {style.rootView} {res.css.columns}">
    <g:FlowPanel ui:field="adblockerWarning" visible="false"
      styleName="{res.css.flex} {res.css.distribute} {style.warning} {res.css.noShrink}">
      <g:Label
        text="Let op: er is (naar waarschijnlijkheid) een adblocker actief, deze kan bepaalde functionaliteiten blokkeren waardoor het lijkt alsof de applicatie niet werkt. U kunt deze website op de 'whitelist' zetten, of de adblocker tijdelijk uitzetten." />
      <g:Button ui:field="refresh1" text="Probeer opnieuw" styleName="{res.css.noShrink}" />
    </g:FlowPanel>
    <g:FlowPanel ui:field="serverLoadFailureWarning" visible="false"
      styleName="{res.css.flex} {res.css.distribute} {style.warning} {res.css.noShrink}">
      <g:Label
        text="Let op: de dataservice kan niet bereikt worden. Het is mogelijk dat bepaalde functionaliteiten tijdelijk niet functioneren." />
      <g:Button ui:field="refresh2" text="Probeer opnieuw" styleName="{res.css.noShrink}" />
    </g:FlowPanel>
    <g:FlowPanel ui:field="clientLoadFailureWarning" visible="false"
      styleName="{res.css.flex} {res.css.distribute} {style.warning} {res.css.noShrink}">
      <g:Label
        text="Let op: er zijn configuratieproblemen gedetecteerd. Het is mogelijk dat bepaalde functionaliteiten tijdelijk niet functioneren." />
      <g:Button ui:field="refresh3" text="Probeer opnieuw" styleName="{res.css.noShrink}" />
    </g:FlowPanel>
    <g:FlowPanel ui:field="connectionFailureWarning" visible="false"
      styleName="{res.css.flex} {res.css.distribute} {style.warning} {res.css.noShrink}">
      <g:Label
        text="Let op: het lijkt erop dat deze machine geen verbinding kan maken met de webservers. Controleer of de internetverbinding functioneert, en dat connecties niet worden verbroken (zoals door een adblocker, of een proxy)." />
      <g:Button ui:field="refresh4" text="Probeer opnieuw" styleName="{res.css.noShrink}" />
    </g:FlowPanel>
    <g:FlowPanel styleName="{style.content} {res.css.flex} {res.css.columns} {res.css.grow}">
      <g:SimplePanel ui:field="contentPanel" styleName="{res.css.flex} {res.css.grow}" />
      <w:NotificationPanel ui:field="notificationPanel" />
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>
 
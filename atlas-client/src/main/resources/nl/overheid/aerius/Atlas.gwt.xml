<module rename-to="application">
  <!-- GWT module inherits -->
  <inherits name="com.google.gwt.user.User" />
  <inherits name="com.google.gwt.i18n.I18N" />
  <inherits name='com.google.gwt.place.Place' />
  <inherits name='com.google.web.bindery.event.Event' />
  <inherits name="com.google.gwt.logging.Logging" />
  <inherits name='com.google.gwt.http.HTTP' />

  <!-- Other module inherits -->
  <inherits name="com.google.gwt.inject.Inject" />
  <inherits name='com.google.web.bindery.event.EventBinder' />

  <!-- ATLAS module inherits -->
  <inherits name='nl.overheid.aerius.AtlasShared' />
  <inherits name='nl.overheid.aerius.Common' />
  
  <!-- Browser-sensitive code should use the 'user.agent.extended' property -->
  <!-- This is a custom interpretation of the concept, because GWT's implementation is outdated and can't distinguish IE11 and FF among other things. -->
  <define-property name="user.agent.extended" values="ie11" />
  <extend-property name="user.agent.extended" values="edge" />
  <extend-property name="user.agent.extended" values="chrome" />
  <extend-property name="user.agent.extended" values="firefox" />
  <property-provider name="user.agent.extended" generator="nl.overheid.aerius.CustomUserAgentPropertyGenerator" />

  <!-- SDM fix for openlayers JS -->
  <set-configuration-property name="xsiframe.failIfScriptTag" value="false" />

  <!-- GSS related config -->
  <set-configuration-property name="CssResource.enableGss" value="true" />
  <set-configuration-property name="CssResource.conversionMode" value="strict" />
  <set-configuration-property name="CssResource.gssDefaultInUiBinder" value="true" />

  <!-- Enable server site logging -->
  <set-property name="gwt.logging.enabled" value="TRUE" />
  <set-property name="gwt.logging.logLevel" value="INFO" />
  <set-property name="gwt.logging.consoleHandler" value="ENABLED" />
  <set-property name="gwt.logging.developmentModeHandler" value="DISABLED" />
  <set-property name="gwt.logging.hasWidgetsHandler" value="DISABLED" />
  <set-property name="gwt.logging.systemHandler" value="DISABLED" />
  <set-property name="gwt.logging.simpleRemoteHandler" value="DISABLED" />
  <set-property name="compiler.stackMode" value="emulated" />
  <set-configuration-property name="compiler.emulatedStack.recordLineNumbers" value="true" />
  <set-configuration-property name="compiler.emulatedStack.recordFileNames" value="true" />
  
  <extend-property name="locale" values="nl_NL"/>
  <set-property name="locale" value="nl_NL" />

  <define-configuration-property name="aerius.ginModules" is-multi-valued="true" />
  
  <source path="wui" />
</module>
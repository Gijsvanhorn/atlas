<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.overheid.aerius.wui.widget">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='img' type='nl.overheid.aerius.wui.resources.ImageResources' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R' />
  <ui:with field='legendText' type='java.lang.String' />
  <ui:style>
    .legend {
    background: white;
    }
    .text {
    padding: 20px;
    }
  </ui:style>
  <g:FlowPanel styleName="{res.css.flex} {res.css.grow} {style.legend}">
    <g:Label styleName="{style.text}" text="{legendText}" />
  </g:FlowPanel>
</ui:UiBinder>

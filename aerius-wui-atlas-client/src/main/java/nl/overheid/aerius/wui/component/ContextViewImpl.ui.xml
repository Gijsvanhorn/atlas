<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.overheid.aerius.wui.widget"
  xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.AtlasMessages' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style type="nl.overheid.aerius.wui.component.ContextViewImpl.CustomStyle">
    .contextContainer {
    position: relative;
    width: 100%;
    transition: width 0.25s ease-out, min-width 0.25s ease-out;
    overflow: hidden;
    }
    .contextContainer > div {
    position: absolute;
    width: 100%;
    height: 100%;
    transition: left 0.2s ease-out;
    box-sizing: border-box;
    z-index: 1;
    min-width: 455px;
    }
  </ui:style>
  <g:FlowPanel ui:field="container" styleName="{style.contextContainer}">
  </g:FlowPanel>
</ui:UiBinder>

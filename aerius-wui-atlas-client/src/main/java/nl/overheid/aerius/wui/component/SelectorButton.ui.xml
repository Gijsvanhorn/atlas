<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:e="urn:import:nl.overheid.aerius.wui.main.ui.editor" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:nl.overheid.aerius.wui.widget">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='img' type='nl.overheid.aerius.wui.resources.ImageResources' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R' />
  <ui:style type="nl.overheid.aerius.wui.component.SelectorButton.CustomStyle" gss="true">
    .disabled {
    cursor: default !important;
    background: none !important;
    -user-select: none;
    }
    .disabled .label {
    color: #cccccc !important;
    }
    .label {
    transition: color 0.15s ease-out;
    color: #4d4d4d;
    padding: 6px 15px;
    }
    .control:hover .label {
    color: #721516;
    }
    .control:active .button {
    background: #d63327;
    }
    .control:active .label {
    color: #d63327;
    }
    .selected .label {
    color: #d63327 !important;
    }
  </ui:style>
  <w:AnimatedFlowPanel ui:field="control" styleName="{res.css.flex} {res.css.alignCenter} {res.css.clickableBackground}">
    <g:Label ui:field="label" styleName="{style.label}" />
  </w:AnimatedFlowPanel>
</ui:UiBinder>

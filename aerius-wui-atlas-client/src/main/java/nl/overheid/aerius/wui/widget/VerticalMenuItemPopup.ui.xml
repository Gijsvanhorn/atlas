<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.overheid.aerius.wui.widget"
  xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style>
    .panel {
    width: 280px;
    background: #dcdcdc;
    padding: 0px;
    box-sizing: border-box;
    }
    .title {
    text-align: center;
    font-weight: bold;
    padding: 0px 20px;
    }
    .description {
    text-decoration: italic;
    padding: 0px 20px;
    }
    .itemPanel {
    width: 100%;
    }
    .itemPanel > * {
    border-top: 1px solid #fff;
    }
    .itemPanel > *:last-child {
    border-bottom: 1px solid #fff;
    }
    .head {
    flex-basis: 150px;
    justify-content: flex-end;
    width: 100%;
    }
  </ui:style>
  <g:FlowPanel styleName="{style.panel} {res.css.flex} {res.css.alignCenter} {res.css.columns}">
    <g:FlowPanel styleName="{res.css.flex} {res.css.columns} {style.head}">
    <g:Label ui:field="title" styleName="{style.title} {res.css.elementMargin}" />
    <g:Label ui:field="description" styleName="{style.description} {res.css.elementMargin}" />
    </g:FlowPanel>
    <g:FlowPanel ui:field="itemPanel" styleName="{style.itemPanel}" />
  </g:FlowPanel>
</ui:UiBinder> 
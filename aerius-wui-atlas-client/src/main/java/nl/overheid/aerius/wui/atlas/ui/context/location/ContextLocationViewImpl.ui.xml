<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:e="urn:import:nl.overheid.aerius.wui.main.ui.editor"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.overheid.aerius.wui.widget"
  xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='img' type='nl.overheid.aerius.wui.resources.ImageResources' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R' />
  <ui:style>
    .container {
    position: relative;
    overflow: hidden;
    }
    .layerContainer {
    position: absolute;
    bottom: 0px;
    width: 100%;
    padding-right: 50px;
    background-color: white;
    flex-shrink: 0;
    box-sizing: border-box;
    z-index: 1;
    }
    .layerContainer > * {
    overflow: auto;
    transition: max-height 0.15s ease-out;
    }
    .map {
    height: 100%;
    width: 100%;
    }
    .map > * {
    height: 100%;
    }
    .hoverContainer {
    position: absolute;
    top: 0px;
    width: 100%;
    pointer-events: none;
    max-width: 455px;
    }
    .hoverPanel {
    margin: 20px 90px 20px 80px;
    }
    .hoveringSelectablePanel {
    box-shadow: 0 0 4px #333;
    background: #f5f5f5cc;
    padding-top: 20px;
    }
    .pointers {
    pointer-events: all;
    }
  </ui:style>
  <g:FlowPanel styleName="{style.container}">
    <g:SimplePanel ui:field="mapPanel" styleName="{style.map} ol-pushed" />
    <g:SimplePanel styleName="{res.css.flex} {style.layerContainer}">
      <c:LayerPanelView ui:field="layerPanel" addStyleNames="{res.css.grow}" />
    </g:SimplePanel>
    <g:SimplePanel styleName="{style.hoverContainer}">
      <g:FlowPanel styleName="{style.hoverPanel} {res.css.flex} {res.css.columns}">
        <c:CompactMapSearchWidget ui:field="searchWidget" />
      </g:FlowPanel>
    </g:SimplePanel>
  </g:FlowPanel>
</ui:UiBinder>

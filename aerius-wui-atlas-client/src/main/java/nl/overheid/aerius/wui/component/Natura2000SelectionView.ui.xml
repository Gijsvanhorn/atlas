<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:nl.overheid.aerius.wui.widget" xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='img' type='nl.overheid.aerius.wui.resources.ImageResources' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style>
    .container {
    display: flex;
    align-self: stretch;
    justify-content: center;
    }
    .grid {
    display: grid;

    grid-template-columns: 1fr;
    grid-template-rows: auto auto auto;

    grid-template-areas: "description"
                         "navigation"
                         "selector";
    overflow: hidden;
    }
    .navigation {
    grid-area: navigation;
    display: flex;
    flex-direction: column;
    background: #f5f5f5;
    }
    .search {
    padding: 10px;
    margin: 20px 10px 10px;
    border: 1px solid transparent;
    transition: border 0.1s ease-out;
    }
    .search:hover {
    border: 1px solid #8888;
    }
    .selector {
    grid-area: selector;
    position: relative;
    }
    .description {
    grid-area: description;
    padding: 20px;
    }

    @media (min-width: 600px) {
      .grid {
      display: grid;
      
      width: 100%;
  
      grid-template-columns: minmax(200px, 350px) minmax(400px, 1fr);
      grid-template-rows: minmax(100px, 150px) minmax(300px, 1fr);
  
      grid-template-areas: "navigation description"
                           "navigation selector";
      }
    }

    @media (min-width: 1400px) {
      .grid {
      display: grid;
      
      width: auto;
  
      grid-template-columns: minmax(200px, 300px) minmax(400px, 800px) minmax(300px, 400px);
      grid-template-rows: minmax(300px, 100%);
  
      grid-template-areas: "navigation selector description";
      }
      .description {
        border-left: 2px solid #f5f5f5;
      }
    }
    .overflow {
      overflow: auto;
      scroll-behavior: smooth;
      position: relative;
    }
    .svgContainer {
      height: 100%;
      display: flex;
    }
  </ui:style>
  <g:SimplePanel styleName="{style.container}">
    <g:FlowPanel styleName="{style.grid}">
      <g:FlowPanel styleName="{style.navigation}">
        <g:TextBox ui:field="searchField" styleName="{style.search}" />
        <w:NavigationLabel ui:field="areaGroupNavigationLabel" />
        <w:SwitchPanel ui:field="areaGroupSwitchPanel" styleName="{style.overflow}">
          <g:FlowPanel ui:field="provinceList" />
          <w:SwitchPanel ui:field="areaResultList">
            <g:Label text="{i18n.areaListNoResultText}" />
            <g:FlowPanel ui:field="areaList" />
          </w:SwitchPanel>
        </w:SwitchPanel>
      </g:FlowPanel>
      <g:FlowPanel styleName="{style.selector}">
        <w:SwitchPanel ui:field="provinceSwitchPanel" styleName="{style.svgContainer}">
          <c:ProvinceSelectionGraph ui:field="provinceImageSelectionGraph" />
          <c:Natura2000ProvinceSelectionGraph ui:field="natura2000ProvinceSelectionGraph" />
        </w:SwitchPanel>
      </g:FlowPanel>
      <g:FlowPanel styleName="{style.description}">
        <w:HeadingWidget n="1" text="Toelichting" />
        <g:Label text="{i18n.filterNaturaDescription}" />
      </g:FlowPanel>
    </g:FlowPanel>
  </g:SimplePanel>
</ui:UiBinder>

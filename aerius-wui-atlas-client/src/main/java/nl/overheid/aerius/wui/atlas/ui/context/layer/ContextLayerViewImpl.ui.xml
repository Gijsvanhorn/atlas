<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:e="urn:import:nl.overheid.aerius.wui.main.ui.editor"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:nl.overheid.aerius.wui.component"
  xmlns:w="urn:import:nl.overheid.aerius.wui.widget">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.AtlasMessages' />
  <ui:with field='img' type='nl.overheid.aerius.wui.resources.ImageResources' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R' />
  <ui:style>
    .container {
    padding-right: 50px;
    background: white;
    overflow: auto;
    }
    .textContainer {
    padding: 20px;
    padding-bottom: 0px;
    }
    .title {
    margin-bottom: 5px;
    }
    .subTitle {
    margin-top: 5px;
    }
    .selectorContainer {
    margin: 20px;
    }
  </ui:style>
  <g:FlowPanel styleName="{res.css.grow} {style.container}">
    <g:FlowPanel styleName="{style.textContainer}">
      <w:HeadingWidget ui:field="titleField" n="2" styleName="{style.title}" />
      <w:HeadingWidget ui:field="subtitleField" n="3" styleName="{style.subTitle}" />
      <w:HeadingWidget ui:field="chapterField" n="1" />
    </g:FlowPanel>
    <g:FlowPanel ui:field="selectorContainer" styleName="{style.selectorContainer}" />
    <c:LayerPanelSwitcher ui:field="layerPanel" />
  </g:FlowPanel>
</ui:UiBinder>

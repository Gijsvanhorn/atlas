<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:e="urn:import:nl.overheid.aerius.wui.main.ui.editor"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.overheid.aerius.wui.widget">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='img' type='nl.overheid.aerius.wui.resources.ImageResources' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R' />
  <ui:style type="nl.overheid.aerius.wui.atlas.ui.context.preferences.ContextPreferencesViewImpl.CustomStyle">
    .container {
    padding: 20px;
    padding-right: 70px;
    background: white;
    overflow: auto;
    opacity: 0;
    }
    .buttonOutline {
    color: #d63327;
    font-weight:
    bold;
    border: 1px solid
    #6d6d6d;
    border-radius: 2px;
    background-color: white;
    box-sizing: border-box;
    width: 80px;
    outline: 0;
    cursor: pointer;
    transition: all 0.15s ease-out;
    }
    .button {
    padding: 10px;
    overflow: hidden;
    }
    .buttonOutline:hover {
    background-color: #d63327;
    color: white;
    }
    .buttonOutline:active {
    background-color: #a50b00;
    }
    .listBox {
    background: none;
    border: none;
    outline: 0;
    color: #d63327;
    font-weight: bold;
    padding:
    10px;
    cursor: pointer;
    }
    .listBox:hover {
    color: white;
    }
    .listBox:active {
    padding: 10px;
    }
    .listBox > option {
    color: black;
    background-color: white;
    }
    .active {
    background-color: #d63327;
    color: white;
    }
    .buttonPanel {

    }
    .buttonPanel > *:first-child {
    border-top-left-radius: 2px;
    border-bottom-left-radius: 2px;
    border-top-right-radius: 0px;
    border-bottom-right-radius: 0px;
    border-right: none;
    }
    .buttonPanel > *:last-child {
    border-left: none;
    border-top-right-radius: 2px;
    border-bottom-right-radius: 2px;
    border-top-left-radius: 0px;
    border-bottom-left-radius: 0px;
    }
    .section {
    margin: 15px 0px;
    }
    .description {
    color: gray;
    }
    .version {
    margin-top: auto;
    color: gray;
    }
  </ui:style>
  <g:FlowPanel styleName="{style.container} {res.css.flex} {res.css.columns}">
    <w:HeadingWidget n="2" text="{i18n.contextPreferencesPanelTitle}" />
    <g:FlowPanel styleName="{style.section}">
      <g:FlowPanel styleName="{res.css.flex} {res.css.distribute} {res.css.elementMargin} {res.css.alignCenter}">
        <g:Label text="{i18n.preferencesUnitTitle}" />
        <g:FlowPanel styleName="{res.css.flex} {style.buttonPanel}">
          <g:Button text="Kg" ui:field="kgActivate" styleName="{style.button} {style.buttonOutline}" />
          <g:Button text="Mol" ui:field="molActivate" styleName="{style.button} {style.buttonOutline}" />
        </g:FlowPanel>
      </g:FlowPanel>
      <g:Label styleName="{style.description}" text="{i18n.preferencesUnit}" />
    </g:FlowPanel>

    <g:FlowPanel styleName="{style.section}">
      <g:FlowPanel styleName="{res.css.flex} {res.css.distribute} {res.css.elementMargin} {res.css.alignCenter}">
        <g:Label text="{i18n.preferencesLabelsTitle}" />
        <g:FlowPanel styleName="{res.css.flex} {style.buttonPanel}">
          <g:Button text="Aan" ui:field="labelsActivate" styleName="{style.button} {style.buttonOutline}" />
          <g:Button text="Uit" ui:field="labelsDeactivate" styleName="{style.button} {style.buttonOutline}" />
        </g:FlowPanel>
      </g:FlowPanel>
      <g:Label styleName="{style.description}" text="{i18n.preferencesLabels}" />
    </g:FlowPanel>
    
    <g:FlowPanel styleName="{style.section}">
      <g:FlowPanel styleName="{res.css.flex} {res.css.distribute} {res.css.elementMargin} {res.css.alignCenter}">
        <g:Label text="{i18n.preferencesAutoLayersTitle}" />
        <g:FlowPanel styleName="{res.css.flex} {style.buttonPanel}">
          <g:Button text="Aan" ui:field="autoLayersActivate" styleName="{style.button} {style.buttonOutline}" />
          <g:Button text="Uit" ui:field="autoLayersDeactivate" styleName="{style.button} {style.buttonOutline}" />
        </g:FlowPanel>
      </g:FlowPanel>
      <g:Label styleName="{style.description}" text="{i18n.preferencesAutoLayers}" />
    </g:FlowPanel>
    
    <g:FlowPanel styleName="{style.section}">
      <g:FlowPanel styleName="{res.css.flex} {res.css.distribute} {res.css.elementMargin} {res.css.alignCenter}">
        <g:Label text="{i18n.preferencesLayerOpacityTitle}" />
        <g:FlowPanel styleName="{res.css.flex} {style.buttonPanel}">
          <g:Button text="Aan" ui:field="layerOpacityActivate" styleName="{style.button} {style.buttonOutline}" />
          <g:Button text="Uit" ui:field="layerOpacityDeactivate" styleName="{style.button} {style.buttonOutline}" />
        </g:FlowPanel>
      </g:FlowPanel>
      <g:Label styleName="{style.description}" text="{i18n.preferencesLayerOpacity}" />
    </g:FlowPanel>

    <g:Label styleName="{style.version}" ui:field="applicationVersion" />
  </g:FlowPanel>
</ui:UiBinder>

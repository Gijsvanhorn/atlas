<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:nl.overheid.aerius.wui.widget" xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.AtlasMessages' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style type="nl.overheid.aerius.wui.atlas.ui.story.StoryViewImpl.CustomStyle">
    .container {
      height: 100vh;
    }
    .container > .contexts {
    min-height: 500px;
    }
    .compact {
    flex-direction: column;
    }
    .contextNavigation {
    width: 100px;
    background: #f5f5f5;
    }
    .compactContextNavigation {
    width: 100%;
    height: 80px;
    background: #f5f5f5;
    }
    .contextPanel {
    overflow: auto;
    }
    .contexts {
    height: 100%;
    position: relative;
    }
    .storyNavigation {
    width: 120px;
    background: #f5f5f5;
    }
    .chapterPositioner {
    width: 0px;
    position: relative;
    height: 100%;
    z-index: 2;
    }
    .chapterContainer {
    background-color: rgba(255,255,255,0.7);
    width: 50px;
    position: absolute;
    right: 0px;
    height: 100%;
    border-left: 1px solid #7d7d7d29;
    box-shadow: 2px 0 2px 0 rgba(0,0,0,.12);
    }
    .chapterNavigation {
    padding-top: 150px;
    width: 50px;
    }
    .collapser {
    position: absolute;
    right: 1px;
    }
    .mapAbsolute {
    position: absolute;
    width: 100%;
    height: 100%;
    }
  </ui:style>
  <g:FlowPanel ui:field="container" styleName="{res.css.flex} {res.css.grow} {style.container}">
    <w:SwitchPanel ui:field="navigationSwitcher" styleName="{res.css.flex} {res.css.noShrink}">
      <c:AdditionalNavigation ui:field="additionalNavigation" addStyleNames="{style.contextNavigation} {res.css.noShrink}" />
      <c:CompactAdditionalNavigation ui:field="compactAdditionalNavigation" addStyleNames="{style.compactContextNavigation} {res.css.noShrink}" />
    </w:SwitchPanel>
    <g:FlowPanel styleName="{res.css.flex} {res.css.grow} {style.contexts}">
      <c:ContextViewImpl ui:field="contextView" addStyleNames="{style.contextPanel} {res.css.noShrink}" />
      <g:SimplePanel styleName="{style.chapterPositioner}">
        <g:FlowPanel styleName="{style.chapterContainer} {res.css.flex} {res.css.grow}">
          <c:PanelCollapseButton ui:field="collapseButton" styleName="{style.collapser}" />
          <c:ChapterNavigationPanel ui:field="chapterNavigation" addStyleNames="{style.chapterNavigation} {res.css.noShrink}" />
        </g:FlowPanel>
      </g:SimplePanel>
      <c:ContentView ui:field="contentView" />
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>
 
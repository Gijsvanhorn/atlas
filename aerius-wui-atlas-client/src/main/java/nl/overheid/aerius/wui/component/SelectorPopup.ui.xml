<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:e="urn:import:nl.overheid.aerius.wui.main.ui.editor" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:nl.overheid.aerius.wui.widget">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.AtlasMessages' />
  <ui:with field='img' type='nl.overheid.aerius.wui.resources.ImageResources' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R' />
  <ui:style>
    .panel {
    background: #dcdcdc;
    box-sizing: border-box;
    overflow: auto;
    }
    .itemPanel {
    width: 100%;
    }
    .itemPanel > * {
    border-top: 1px solid #fff;
    }
    .itemPanel > *:last-child {
    border-bottom: 1px solid #fff;
    }
    .searchBox {
    height: 37px;
    width: 100%;
    display: flex;
    position: sticky;
    top: 0px;
    }
    .searchField {
    outline: 0;
    border: none;
    width: 100%;
    background: #dcdcdc;
    padding: 4px 15px;
    color: #d63327;
    font-weight: bold;
    }
    .searchField::placeholder {
    font-weight: normal;
    }
  </ui:style>
  <g:FlowPanel styleName="{style.panel} {res.css.flex} {res.css.alignCenter} {res.css.columns}">
    <g:SimplePanel styleName="{style.searchBox} {res.css.noShrink}">
      <g:TextBox ui:field="searchBox" styleName="{style.searchField}" />
    </g:SimplePanel>
    <g:FlowPanel ui:field="itemPanel" styleName="{style.itemPanel}" />
  </g:FlowPanel>
</ui:UiBinder>

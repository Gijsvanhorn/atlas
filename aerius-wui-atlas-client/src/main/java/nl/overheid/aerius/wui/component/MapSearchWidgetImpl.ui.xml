<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:e="urn:import:nl.overheid.aerius.wui.main.ui.editor"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.overheid.aerius.wui.widget">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='img' type='nl.overheid.aerius.wui.resources.ImageResources' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R' />
  <ui:style type="nl.overheid.aerius.wui.component.MapSearchWidgetImpl.CustomStyle">
    .search {
    position: absolute;
    right: 20px;
    top: 40px;
    z-index: 1;
    background: #fffd;
    border-radius: 24px;
    border: 1px solid #ccc;
    cursor: auto;
    padding: 10px 20px;
    transition: border 0.15s ease-out;
    }
    .focus, .search:hover {
    border-color: #888;
    }
    .searchBox {
    color: black;
    padding: 0px 5px;
    border: none !important;
    background: none !important;
    outline: 0;
    flex-basis: 200px;
    width: 200px;
    transition: all 0.15s ease-out;
    }
    .searchBox::placeholder {
    color: #262626;
    }
    .search:hover > .searchBox {
    flex-basis: 220px;
    width: 220px;
    }
    .focus > .searchBox, .searchBox:focus {
    flex-basis: 415px !important;
    width: 415px !important;
    }
    .searchImage {
    width: 24px;
    height: 24px;
    }
  </ui:style>
  <g:FlowPanel ui:field="searchContainer" styleName="{res.css.flex} {res.css.alignCenter} {style.search}">
    <g:TextBox ui:field="searchField" styleName="{style.searchBox}" />
    <g:Image styleName="{style.searchImage} {res.css.noShrink}" ui:field="searchImage" url="{res.images.buttonSearchNormal.getSafeUri.asString}" />
  </g:FlowPanel>
</ui:UiBinder>

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.overheid.aerius.wui.widget"
  xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.AtlasMessages' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style type="nl.overheid.aerius.wui.widget.NotificationPanel.CustomStyle">
    .panel {
    position: fixed;
    z-index: 10000;
    top: 0;
    right: 0;
    display: flex;
    flex-direction: column;
    }
    .hide {
    opacity: 0 !important;
    }
  </ui:style>
  <g:FlowPanel ui:field="container" styleName="{style.panel} {res.css.flex} {res.css.grow} {res.css.justify}" />
</ui:UiBinder>

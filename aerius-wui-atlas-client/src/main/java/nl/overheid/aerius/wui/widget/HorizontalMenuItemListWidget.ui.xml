<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.overheid.aerius.wui.widget"
  xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.AtlasMessages' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style type="nl.overheid.aerius.wui.widget.MenuItemListWidget.CustomStyle">
    .panel {
    position: relative;
    user-select: none;
    }
    .panel:hover .arrow {
    border-color: #721516;
    }
    .panel:hover .label {
    color: #721516;
    }
    .focus .arrow, .panel:active .arrow {
    border-color: #d63327 !important;
    }
    .focus .label, .panel:active .label {
    color: #d63327 !important;
    }
    .arrow {
    position: absolute;
    bottom: 12px;
    right: calc(50% - 10px);
    border: solid #4d4d4d;
    border-width: 0 2px 2px 0;
    transform: rotate(45deg);
    padding: 2px;
    margin: 0px 6px 2px;
    transition: border-color 0.15s ease-out;
    }
    .label {
    text-align: center;
    color: #4d4d4d;
    transition: color 0.15s ease-out;
    }
  </ui:style>
  <g:FocusPanel ui:field="panel" styleName="{style.panel} {res.css.flex} {res.css.clickableBackground}">
    <g:FlowPanel styleName="{res.css.grow} {res.css.flex} {res.css.columns} {res.css.alignCenter} {res.css.justify}">
      <g:Label ui:field="label" addStyleNames="{style.label}" />
      <g:SimplePanel ui:field="arrow" styleName="{style.arrow}" />
    </g:FlowPanel>
  </g:FocusPanel>
</ui:UiBinder>
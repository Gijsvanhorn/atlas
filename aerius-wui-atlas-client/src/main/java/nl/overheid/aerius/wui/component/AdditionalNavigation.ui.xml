<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:nl.overheid.aerius.wui.widget" xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.AtlasMessages' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style type="nl.overheid.aerius.wui.component.AdditionalNavigation.CustomStyle">
    .logo {
    z-index: 1;
    cursor: pointer;
    transition: filter 0.15s ease-out;
    height: 100px;
    }
    .logo:hover {
    filter: saturate(1.5);
    }
    .logo:active {
    filter: saturate(2);
    }
    .contextNavigation {
    transition: width 0.2s ease-out;
    }
    .compact {
    width: 50px !important;
    }
    .storyPanel {
    height: 50px;
    border-bottom: 1px solid #fff;
    }
    .selectionPanel {
    height: 31px;
    border-bottom: 1px solid #fff;
    }
  </ui:style>
  <g:FlowPanel ui:field="container" styleName="{style.contextNavigation} {res.css.flex} {res.css.columns}">
    <g:Image ui:field="logo" url="{res.monitorLogo.getSafeUri.asString}" styleName="{style.logo} {res.css.noShrink}" />
    <c:CompactLibraryWidget ui:field="libraryWidget" addStyleNames="{style.storyPanel} {res.css.noShrink}" />
    <c:DataSetListWidget ui:field="dataSetWidget" addStyleNames="{style.selectionPanel} {res.css.noShrink}" />
    <c:YearListWidget ui:field="yearWidget" addStyleNames="{style.selectionPanel} {res.css.noShrink}" />
    <c:PanelNavigation ui:field="contextNavigation" addStyleNames="{res.css.noShrink} {res.css.grow}" />

    <g:FlowPanel styleName="{res.css.flex} {res.css.columns}">
      <g:Label styleName="{res.css.grow}" />
      <c:StoryHideButton ui:field="exitButton" />
    </g:FlowPanel>

<!--
    <g:FlowPanel styleName="{res.css.flex} {res.css.columns}">
      <g:Button text="magic" ui:field="compactToggle" />
    </g:FlowPanel> -->
  </g:FlowPanel>
</ui:UiBinder>

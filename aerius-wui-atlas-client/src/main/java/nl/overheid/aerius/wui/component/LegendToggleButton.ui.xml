<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:e="urn:import:nl.overheid.aerius.wui.main.ui.editor"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.overheid.aerius.wui.widget"
  xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.AtlasMessages' />
  <ui:with field='img' type='nl.overheid.aerius.wui.resources.ImageResources' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style>
    .button {
    height: 58px;
    width: 58px;
    transition: all 0.15s ease-out;
    font-weight: bold;
    }
    .closeButton {
    width: 58px;
    height: 58px;
    }
    .text {
    color: inherit;
    text-align:
    center;
    pointer-events: none;
    user-select: none;
    -webkit-user-select: none;
    }
  </ui:style>
  <w:SwitchPanel ui:field="switchPanel">
    <c:LegendButton ui:field="displayButton" />
    <c:LegendHideButton ui:field="hideButton" addStyleNames="{style.closeButton}" />
    <g:SimplePanel styleName="{res.css.flex} {res.css.alignCenter} {res.css.distribute} {style.button}">
      <g:Label text="-" styleName="{style.text} {res.css.grow}" />
    </g:SimplePanel>
  </w:SwitchPanel>
</ui:UiBinder>

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:nl.overheid.aerius.wui.widget" xmlns:c="urn:import:nl.overheid.aerius.wui.component"
  xmlns:l="urn:import:nl.overheid.aerius.wui.atlas.ui.login">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.AtlasMessages' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style>
    .panel {
    background-color: #1b3d6e;
    box-sizing: border-box;
    width: 100%;
    }
    .title {
    margin: 20px;
    color: white;
    font-size: 1.5em;
    font-family: monospace;
    }
  </ui:style>
  <w:AnimatedFlowPanel ui:field="panel" visible="false" styleName="{res.css.flex} {res.css.noShrink} {style.panel}">
    <l:EditorPanel ui:field="redactionPanel" />
  </w:AnimatedFlowPanel>
</ui:UiBinder>

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.overheid.aerius.wui.widget"
  xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style type="nl.overheid.aerius.wui.widget.AnimatedLabel.CustomStyle">
    .labelContainer {
    position: relative;
    overflow: hidden;
    }
    .animatedText {
    margin-top: 16px;
    position: absolute;
    transition: top .15s ease-out;
    }
    .noAnimation {
    transition: none;
    }
  </ui:style>
  <g:FlowPanel styleName="{style.labelContainer} {res.css.flex} {res.css.alignCenter} {res.css.justify}" ui:field="container" />
</ui:UiBinder> 
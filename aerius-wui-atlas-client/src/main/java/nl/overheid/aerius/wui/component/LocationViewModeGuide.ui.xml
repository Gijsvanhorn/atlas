<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:nl.overheid.aerius.wui.widget" xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style>
    .guide {
    margin: 20px;
    padding: 20px;
    background: #f6f5a1;
    }
  </ui:style>
  <g:FlowPanel styleName="{style.guide}">
    <g:Label
      text="Zoom in op de kaart en klik op een punt in het Natura 2000-gebied voor informatie over een specifieke locatie." />
  </g:FlowPanel>
</ui:UiBinder>

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:nl.overheid.aerius.wui.widget" xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style>
    .logo {
    z-index: 1;
    cursor: pointer;
    transition: filter 0.15s ease-out;
    height: 80px;
    width: 80px;
    }
    .logo:hover {
    filter:
    saturate(1.5);
    }
    .logo:active {
    filter: saturate(2);
    }
    .storyPanel {
    border-right: 1px solid #fff;
    }
    .selectionPanel {
    border-right: 1px solid #fff;
    min-width: 50px;
    }
    .hide {
    width: 50px;
    }
  </ui:style>
  <g:FlowPanel ui:field="container" styleName="{res.css.flex}">
    <g:Image ui:field="logo" url="{res.monitorLogo.getSafeUri.asString}" styleName="{style.logo} {res.css.noShrink}" />
    <c:HorizontalLibraryWidget ui:field="libraryWidget" addStyleNames="{style.storyPanel} {res.css.noShrink}" />
    <c:HorizontalDataSetListWidget ui:field="dataSetWidget" addStyleNames="{style.selectionPanel} {res.css.noShrink}" />
    <c:HorizontalYearListWidget ui:field="yearWidget" addStyleNames="{style.selectionPanel} {res.css.noShrink}" />
    <c:PanelNavigation ui:field="contextNavigation" addStyleNames="{res.css.noShrink} {res.css.grow} {res.css.flex}" />

    <g:Label styleName="{res.css.grow}" />
    <c:StoryHideButton ui:field="exitButton" addStyleNames="{style.hide}" />
  </g:FlowPanel>
</ui:UiBinder>

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:nl.overheid.aerius.wui.widget" xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style type="nl.overheid.aerius.wui.widget.MaskedButton.CustomStyle">
    .control {
    padding: 10px 0px 0px;
    cursor: pointer;
    background: #f5f5f5;
    user-select: none;
    transition: filter 0.15s ease-out;
    }
    .disabled {
    cursor: default !important;
    background: none !important;
    user-select: none;
    pointer-events: none;
    filter: opacity(0.5);
    }
    .button {
    width: 64px;
    height: 64px;
    margin: 0px 9px;
    transition: background 0.15s ease-out;
    pointer-events: none;
    }
    .button > svg {
    fill: #4d4d4d;
    }
    .label {
    transition: color 0.15s ease-out;
    text-align: center;
    font-size: 14pt;
    color: #4d4d4d;
    padding: 15px 10px;
    }
    .control:hover .button > svg {
    fill: #721516;
    }
    .control:hover .label {
    color:
    #721516;
    }
    .control:active .button > svg {
    fill: #d63327;
    }
    .control:active .label {
    color: #d63327;
    }
    .selected .button > svg {
    fill: #d63327 !important;
    }
    .selected .label {
    color: #d63327
    !important;
    }
    .storyLabel {
    background: #828282;
    transition: background 0.15s ease-out;
    width: 100%;
    padding: 5px;
    box-sizing: border-box;
    }
    .storyLabelText {
    color: white;
    }
    .control:hover > .storyLabel {
    background: #721516;
    }
    .control:active > .storyLabel {
    background: #d63327 !important;
    }
    .selected > .storyLabel {
    background: #d63327 !important;
    }
    .icon {
    width: 18px;
    height: 18px;
    margin-right: 5px;
    }
    .icon > svg {
    fill: white;
    }
  </ui:style>
  <g:FlowPanel ui:field="control" styleName="{style.control} {res.css.flex} {res.css.alignCenter} {res.css.columns} {res.css.clickableBackground}">
    <g:FlowPanel styleName="{res.css.flex} {res.css.spaceAround} {res.css.grow} {res.css.alignCenter} {res.css.columns}">
      <g:SimplePanel ui:field="button" styleName="{style.button} {res.css.noShrink}" />
      <g:Label ui:field="label" styleName="{style.label}" />
    </g:FlowPanel>
    <g:FlowPanel styleName="{res.css.flex} {res.css.distribute} {style.storyLabel}">
      <g:FlowPanel styleName="{res.css.flex}">
        <g:SimplePanel ui:field="authorIcon" styleName="{style.icon}" />
        <g:Label ui:field="authorName" styleName="{style.storyLabelText}" />
      </g:FlowPanel>
      <g:FlowPanel styleName="{res.css.flex}">
        <g:SimplePanel ui:field="creationIcon" styleName="{style.icon}" />
        <g:Label ui:field="creationDate" styleName="{style.storyLabelText}" />
      </g:FlowPanel>
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:nl.overheid.aerius.wui.widget" xmlns:c="urn:import:nl.overheid.aerius.wui.component"
  xmlns:l="urn:import:nl.overheid.aerius.wui.atlas.ui.login">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:style type="nl.overheid.aerius.wui.atlas.ui.login.EditableContentEditorPanel.CustomStyle">
    .button {
    display: flex;
    border: none;
    height: 46px;
    background: #1b3d6e;
    cursor: pointer;
    color: white;
    font-weight: bold;
    outline: 0;
    transition: background 0.15s ease-out;
    align-items: center;
    padding-right: 10px;
    }
    .button:hover {
    background: #157cb1;
    }
    .button:active {
    background: #157cb1;
    }
    .button>*:first-child {
    width: 24px;
    height: 24px;
    margin: 0px 10px;
    }
    .text {
    color: white;
    padding: 0 15px;
    }
    .borderRight {
    border-right: 2px solid #ccc;
    }
    .disabled > * {
    background: #bcbec0 !important;
    cursor: auto !important;
    }
  </ui:style>
  <w:AnimatedFlowPanel styleName="{res.css.flex}">
    <g:SimplePanel styleName="{style.borderRight}">
      <g:FocusPanel ui:field="openButton">
        <g:FlowPanel styleName="{style.button}">
          <g:Image url="{res.editorOpen.getSafeUri.asString}" />
          <g:Label text="Open" />
        </g:FlowPanel>
      </g:FocusPanel>
    </g:SimplePanel>

    <g:SimplePanel styleName="{style.borderRight}">
      <g:FocusPanel ui:field="documentsButton">
        <g:FlowPanel styleName="{style.button}">
          <g:Image url="{res.editorDocuments.getSafeUri.asString}" />
          <g:Label text="Bijlagen" />
        </g:FlowPanel>
      </g:FocusPanel>
    </g:SimplePanel>

    <g:SimplePanel styleName="{style.borderRight}">
      <g:FocusPanel ui:field="refreshButton">
        <g:FlowPanel styleName="{style.button}">
          <g:Image url="{res.editorReload.getSafeUri.asString}" />
          <g:Label text="Herlaad" />
        </g:FlowPanel>
      </g:FocusPanel>
    </g:SimplePanel>

    <g:SimplePanel styleName="{res.css.flex} {res.css.alignCenter} {res.css.grow}">
      <g:Label ui:field="selectionText" styleName="{res.css.grow} {style.text}" />
    </g:SimplePanel>
  </w:AnimatedFlowPanel>
</ui:UiBinder>
 
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:nl.overheid.aerius.wui.widget" xmlns:c="urn:import:nl.overheid.aerius.wui.component">
  <ui:with field='i18n' type='nl.overheid.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='res' type='nl.overheid.aerius.wui.resources.R.ApplicationResource' />
  <ui:with field='text' type='java.lang.String' />
  <ui:style>
    .panel {
    position: fixed;
    z-index: 10000;
    opacity: 0;
    pointer-events: none;
    user-select: none;
    -webkit-user-select: none;
    transition: margin 0.15s ease-out, opacity 0.15s ease-out;
    }
    .text {
    text-align: center;
    padding: 5px 10px;
    border-radius: 5px;
    background: #7b1c1d;
    color: white;
    }
  </ui:style>
  <g:SimplePanel styleName="{res.css.flex} {res.css.alignCenter} {style.panel}">
    <g:Label text="{text}" styleName="{style.text}" />
  </g:SimplePanel>
</ui:UiBinder>
